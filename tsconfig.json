{
  "compilerOptions": {
    "incremental": true,
    "downlevelIteration": true,
    "lib": ["ESNext", "dom"],
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "noEmit": true, // let tsconfig.build.json emit files
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts", "./ignore/**/*.ts"],
  "exclude": ["./dist", "node_modules/**/*", "_warmup/**/*", ".vscode/**/*", "./tests/"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "files": ["src/types.d.ts"]
}
